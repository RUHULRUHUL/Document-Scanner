<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="15dp"
    android:padding="10dp"
    android:elevation="5dp"
    android:background="@drawable/rounded_corner_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/no_qr_code_scans_yet"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="16dp" android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/start_scanning_and_your_scan_data_will_appear_here"
        android:textSize="12sp"
        android:paddingVertical="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionButton"
        android:text="@string/start_scanning"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="@dimen/space_50"
        android:backgroundTint="#009688"
        android:textColor="@color/white"
        app:icon="@drawable/ic_qr_scan_svg"
        app:iconPadding="8dp"
        app:iconTint="@color/white" />
</LinearLayout>
