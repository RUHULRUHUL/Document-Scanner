<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Left Side Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My App"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivIcon1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- Icon 1 -->
    <ImageView
        android:id="@+id/ivIcon1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_app_setting"
        android:contentDescription="Search"
        app:layout_constraintEnd_toStartOf="@+id/ivIcon2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/textColor" />

    <!-- Icon 2 -->
    <ImageView
        android:id="@+id/ivIcon2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_app_setting"
        android:contentDescription="Notifications"
        app:layout_constraintEnd_toStartOf="@+id/ivIcon3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/textColor" />

    <!-- Icon 3 -->
    <ImageView
        android:id="@+id/ivIcon3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_app_setting"
        android:contentDescription="Favorites"
        app:layout_constraintEnd_toStartOf="@+id/ivIcon4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:tint="@color/textColor" />

    <!-- Icon 4 (Furthest right) -->
    <ImageView
        android:id="@+id/ivIcon4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_app_setting"
        android:contentDescription="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/textColor" />

</androidx.constraintlayout.widget.ConstraintLayout>
