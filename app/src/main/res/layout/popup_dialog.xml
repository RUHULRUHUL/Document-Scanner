<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/space_5"
    android:paddingVertical="50dp"
    android:elevation="10dp"
    android:paddingHorizontal="30dp"
    android:background="@drawable/round_gray_radius8dp">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/select_an_item"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <!-- Image to Text -->
    <LinearLayout
        android:id="@+id/optionImageToText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingVertical="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_language"
            app:tint="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_to_text_ocr"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:paddingStart="12dp"/>
    </LinearLayout>

    <!-- Image to PDF -->
    <LinearLayout
        android:id="@+id/optionImageToPdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_language"
            app:tint="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_to_pdf_converter"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:paddingStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_language"
            app:tint="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id_card_scan"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:paddingStart="12dp"/>
    </LinearLayout>

</LinearLayout>
