<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@color/topBottomColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Scan Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/topBottomColor"
        android:elevation="5dp"
        app:titleTextColor="@color/background">

        <ImageView
            android:id="@+id/icBackImg"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/space_10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/pdf_viewer_ic_arrow_back_alt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/textColor" />

        <TextView
            app:layout_constraintStart_toEndOf="@+id/icBackImg"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="16sp"
            android:text="@string/document_to_text_ocr"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/pdfLabelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="5dp"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/pdfShowLabelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="20dp"
                android:text="@string/show_all"
                android:visibility="gone"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/pdfLabelTxt"
                app:layout_constraintTop_toTopOf="@+id/pdfLabelTxt" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/languageRV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/space_20"
                app:layout_constraintTop_toBottomOf="@+id/pdfLabelTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:itemCount="10"
                app:spanCount="2"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/language_row" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/bottomLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/space_20"
        android:elevation="@dimen/space_5"
        android:background="@drawable/bottom_sheet_dialog_bg"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/gotoScan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/white"
            android:drawablePadding="@dimen/space_20"
            android:paddingStart="@dimen/space_10"
            android:paddingVertical="2dp"
            android:text="@string/start_scan"
            android:textAllCaps="false"
            android:background="@drawable/round_red_bg"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>