<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_gray_radius8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:elevation="0.5dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintHorizontal_weight=".1"
        android:src="@drawable/ic_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/textColor" />

    <TextView
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/dark_mode"
        android:id="@+id/labeTxt"
        app:layout_constraintEnd_toStartOf="@+id/themSwitch"
        android:textAlignment="textStart"
        android:layout_marginStart="20dp"
        app:layout_constraintHorizontal_weight=".7"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/textColor"
        android:layout_height="wrap_content"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/labeTxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/themSwitch"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>